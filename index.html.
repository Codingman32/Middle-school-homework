    }
    #toolbar {
      background-color: #f1f3f4;
      padding: 10px;
      display: flex;
      justify-content: space-between;
      border-bottom: 1px solid #dadce0;
    }
    #content {
      padding: 20px;
      height: 90vh;
    }
    iframe {
      width: 100%;
      height: 100%;
      border: none;
      display: none;
    }
    #panic {
      background: #fff;
      color: #000;
      border: 1px solid #dadce0;
      padding: 5px 10px;
      cursor: pointer;
    }
